# NASA Weather Probability Analyzer - Environment Configuration
# Copy this file to .env and fill in your credentials

# ==============================================================================
# NASA EARTHDATA CREDENTIALS
# ==============================================================================
# Register at: https://urs.earthdata.nasa.gov/users/new
NASA_EARTHDATA_USERNAME=your_username_here
NASA_EARTHDATA_PASSWORD=your_password_here
NASA_API_KEY=your_api_key_here

# ==============================================================================
# MAPPING SERVICES
# ==============================================================================
# Mapbox token for enhanced map features (optional)
# Get token at: https://account.mapbox.com/
MAPBOX_TOKEN=your_mapbox_token_here

# ==============================================================================
# CACHE CONFIGURATION
# ==============================================================================
# Enable caching for improved performance
CACHE_ENABLED=true
CACHE_DIRECTORY=./cache
CACHE_TTL=3600

# ==============================================================================
# REDIS CONFIGURATION (Optional - for production caching)
# ==============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ==============================================================================
# APPLICATION SETTINGS
# ==============================================================================
# Debug mode (set to false in production)
DEBUG_MODE=false

# Application port (default: 8501 for Streamlit)
APP_PORT=8501

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ==============================================================================
# DATA SOURCE PREFERENCES
# ==============================================================================
# Preferred data source for each variable
# Options: MERRA2, GPM_IMERG, MODIS, GIOVANNI
TEMP_DATA_SOURCE=MERRA2
PRECIP_DATA_SOURCE=GPM_IMERG
WIND_DATA_SOURCE=MERRA2
HUMIDITY_DATA_SOURCE=MERRA2
AQI_DATA_SOURCE=MODIS

# ==============================================================================
# RATE LIMITING
# ==============================================================================
# API request rate limits
REQUESTS_PER_MINUTE=60
REQUESTS_PER_HOUR=1000

# ==============================================================================
# FEATURE FLAGS
# ==============================================================================
# Enable/disable specific features
ENABLE_MAP_SELECTION=true
ENABLE_PDF_EXPORT=false
ENABLE_MULTIPLE_LOCATIONS=false
ENABLE_USER_ACCOUNTS=false

# ==============================================================================
# SECURITY
# ==============================================================================
# Secret key for session management (generate random string)
SECRET_KEY=your_secret_key_here

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:8501

# ==============================================================================
# DATABASE (Optional - for future features)
# ==============================================================================
# Database URL for storing user preferences
DATABASE_URL=sqlite:///weather_analyzer.db

# ==============================================================================
# EXTERNAL SERVICES (Optional)
# ==============================================================================
# Geocoding service API key
GEOCODING_API_KEY=your_geocoding_key_here

# Email service for notifications (future feature)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# ==============================================================================
# ANALYTICS (Optional)
# ==============================================================================
# Google Analytics ID (if you want to track usage)
GOOGLE_ANALYTICS_ID=

# ==============================================================================
# NOTES
# ==============================================================================
# 1. Never commit the actual .env file to version control
# 2. Keep credentials secure and rotate regularly
# 3. Use strong passwords and API keys
# 4. For production, use environment-specific configurations
# 5. Test in demo mode first before adding real credentials